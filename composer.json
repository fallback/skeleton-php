{
    "name": "pxgamer/:package_name",
    "type": "library",
    "description": ":package_description",
    "license": "MIT",
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.5",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "pxgamer\\Skeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pxgamer\\Skeleton\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
}
